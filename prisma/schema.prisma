generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Hospitals {
  id           Int      @id @default(autoincrement())
  name         String
  Area         String?
  Address      String?
  Rating       Float?
  phone        String?
  TotalReviews Int?
  ThumbNail    String?
  OpeningTime  String?
  Verified     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Reviews      Reviews[]
  
  @@index([TotalReviews], name: "TotalReviewsIndex") // Adding index to TotalReviews field
}

model Reviews {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  rating    Float
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Hospitals Hospitals @relation(fields: [hospitalId], references: [id])
  hospitalId Int
  
  @@index([hospitalId], name: "HospitalIdIndex") // Adding index to hospitalId field
}
